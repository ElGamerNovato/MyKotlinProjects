<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:padding="15dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de la Matrícula"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Alumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alumno:" />

        <TextView
            android:id="@+id/Escuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escuela:" />

        <TextView
            android:id="@+id/Carrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrera:" />

        <TextView
            android:id="@+id/GastosAdicionales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gastos Adicionales:" />

        <TextView
            android:id="@+id/MontoGastosAdicionales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto de los gastos adicionales:" />

        <TextView
            android:id="@+id/NumeroCuotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de cuotas:" />

        <TextView
            android:id="@+id/CostoCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo de la carrera:" />

        <TextView
            android:id="@+id/Pension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pensión:" />

        <TextView
            android:id="@+id/TotalPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total a pagar:" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>